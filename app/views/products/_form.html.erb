<%= form_with model: product do |form| %>
  <div>
    <b><%= form.label :title %><br></b>
    <%= form.text_field :title %>
    <% product.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <b><%= form.label :description %><br></b>
    <%= form.text_area :description %><br>
    <% product.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <b><%= form.label :price %><br></b>
    <%= form.text_field :price %><br>
    <% product.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <b><%= form.label :image %><br></b>
    <%= form.text_area :image %><br>
    <% product.errors.full_messages_for(:image).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="d-grid">
    <button class="btn btn-primary" type="button"><%= form.submit %></button>
  </div>

  <div>
  <%= form.label :status %><br>
  <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </div>

<% end %>