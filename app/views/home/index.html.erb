<div class="container">
    <div class="row">
    <div class="col">
        <h1>Josh's Store</h1>
    </div>
    </div>
</div>

<hr/>

<div class="container">
    <div class="row">
        <% @products.each do |product| %>
        <div class="col">
            <strong><%=product.title%></strong> 
            costs $<%=product.price%> dollars
            <br><%=product.description%>
            <br>
            <%= link_to "Buy Now", buy_path(product), class: "btn btn-primary"%>
            
            <br><br><br>
        </div>
        <% end %>
    </div>
</div>

<hr/>
<div class="container">
<div class="alert alert-success" role="alert">
<div class="text-center">
<%= @products.count %> products and couting! Check back soon!
</div>
</div>
</div>
<hr/>

<h2> Your shopping cart has <%=@cart.length%> items</h2>
<%= link_to "Check Out", checkout_path%>

